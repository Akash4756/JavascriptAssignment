@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Place your order</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-5">
                        <div class="form-group">
                            <label>Select Menu</label>
                            <select id="ddlMenu" class="form-control">
                                <option value="-1">Select</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="form-group">
                            <label>Enter Quantity</label>
                            <input type="number" id="txtQuantity" class="form-control" value="0" />
                        </div>
                    </div>

                    <div class="col-2">
                        <div class="form-group">
                            <button class="btn btn-success mt-4" id="btnAdd">Add Item</button>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12" id="divOrder">
                        <p>Your card is empty</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 
<script src="~/js/Order.js"></script>